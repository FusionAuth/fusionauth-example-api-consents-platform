doctype html
html
  head
    meta(charset="utf-8")
    title FusionAuth Express Web
    link(rel="stylesheet", href="/static/css/moneyscope.css")
  body
    #page-container
      #page-header
        #logo-header
          img(src="/static/img/moneyscope.svg")
          .h-row
            p.header-email
            a.button-lg(href="/logout") Logout
        #menu-bar.menu-bar
          a.menu-link(href="/account") Account
      div(style="flex: 1;")
        // Application page
        .column-container
          .app-container
            h3 Your balance
            .balance $#{balanceData.balance}
    script.
      // Snag cookie user data
      const user = JSON.parse(decodeURIComponent(document.cookie.split('; ').filter(c => c.includes('userDetails')).at(0).split('=').at(-1)).replace('j:', ''))
      document.querySelector('.header-email').innerHTML = user.email;
